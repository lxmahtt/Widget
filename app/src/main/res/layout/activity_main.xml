<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <com.kotlin.widget.widget.Clock
                android:layout_width="150dp"
                android:layout_height="150dp"/>

        <com.kotlin.widget.widget.WatchBoard
                android:layout_width="150dp"
                android:layout_marginLeft="20dp"
                android:layout_height="150dp"/>
    </LinearLayout>

    <com.kotlin.widget.widget.VerificationCodeView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            app:vcv_et_bg="@drawable/et_verification_bg"
            app:vcv_et_cursor="@drawable/et_verification_cursor"
            app:vcv_et_inputType="number"
            app:vcv_et_width="44dp"
            app:vcv_et_number="4"
            app:vcv_et_text_color="#2C2D31"
            android:layout_height="44dp">

    </com.kotlin.widget.widget.VerificationCodeView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
        <com.kotlin.widget.widget.SwitchButtonDrawable
                android:layout_marginLeft="20dp"
                app:switch_frameDrawable="@mipmap/switch_frame"
                app:switch_stateDrawable="@mipmap/switch_use_state"
                app:switch_stateMaskDrawable="@mipmap/switch_state_mask"
                app:switch_sliderDrawable="@mipmap/switch_use_slider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.kotlin.widget.widget.SwitchButton
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>