<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <com.kotlin.widget.widget.Clock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.kotlin.widget.widget.WatchBoard
            android:layout_width="200dp"
            android:layout_height="200dp"/>

    <com.kotlin.widget.widget.VerificationCodeView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            app:vcv_et_bg="@drawable/et_verification_bg"
            app:vcv_et_cursor="@drawable/et_verification_cursor"
            app:vcv_et_inputType="number"
            app:vcv_et_width="44dp"
            app:vcv_et_number="4"
            app:vcv_et_text_color="#2C2D31"

            android:layout_height="44dp">

    </com.kotlin.widget.widget.VerificationCodeView>

    <com.kotlin.widget.widget.VerificationCodeInput
            android:layout_width="match_parent"
            app:box="4"
            app:child_h_padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

    </com.kotlin.widget.widget.VerificationCodeInput>


</LinearLayout>